@model IEnumerable<BooksManager.Models.Book>

@{
    ViewData["Title"] = "Bem-vindo à Biblioteca Online";
}

<style>
    /* Estilo para tornar o cartão clicável */
    .card-link {
        text-decoration: none;
        color: inherit;
    }

    img{
    object-fit:cover;
    height: 16rem;
    }

    /* Animação ao passar o mouse sobre o cartão */
    .clickable-card {
        transition: transform 0.4s ease-in-out, box-shadow 0.4s ease-in-out;
    }

        .clickable-card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        }

</style>

<div class="container my-5">
    <!-- Título de Boas-Vindas -->
    <div class="text-center">
        <h1 class="display-4" style="color: #5a4e4d;">Bem-vindo à Biblioteca Online</h1>
        <p class="lead text-muted">Explore e descubra livros disponíveis na nossa coleção.</p>
    </div>

    <!-- Show login and register buttons if the user is not logged in -->
    @if (ViewContext.HttpContext.Session.GetString("UserId") == null)
    {
        <div class="text-center mt-4">
            <p class="text-muted">Para acessar mais recursos, faça login ou registre-se:</p>
            <a href="/Account/Login" class="btn btn-primary me-2">Iniciar Sessão</a>
            <a href="/Account/Register" class="btn btn-secondary">Registrar-se</a>
        </div>
    }
    @if (ViewContext.HttpContext.Session.GetString("UserRole") == "Administrador")
    {
        <div class="text-center mt-4">
            <a href="/Books" class="btn btn-primary">Acessar Catálogo de Admin</a>
        </div>
    }

    <!-- Catálogo de Livros -->
    <div class="my-5">
        @if (!Model.Any())
        {
            <!-- Message if no books are available -->
            <div class="text-center text-muted">
                <p style="font-weight:bolder">Nenhum livro disponível no momento. Por favor, volte mais tarde!</p>
            </div>
        }
        else
        {
            <h2 class="text-center" style="color: #5a4e4d;">Catálogo de Livros</h2>
            <p class="text-center text-muted mb-4">Escolha seu próximo livro favorito</p>

            <!-- Display books if available -->
            <div class="row">
                @foreach (var book in Model)
                {
                    <div class="col-md-4 mb-4">
                        <a asp-action="Details" asp-controller="Books" asp-route-id="@book.Id" class="text-decoration-none card-link">
                            <div class="card h-100 shadow-sm clickable-card">
                                <!-- Imagem do Livro -->
                                <img src="~/Images/@book.ImagemPath" class="card-img-top" alt="Capa de @book.Titulo">
                                <div class="card-body">
                                    <!-- Título e Autor do Livro -->
                                    <h5 class="card-title" style="color: #5a4e4d;">@book.Titulo</h5>
                                    <p class="card-text text-muted">Autor: @book.Autor</p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
    </div>


</div>

<!-- Estilos personalizados -->
<style>
    h1, h2 {
        color: #5a4e4d;
    }

    .card {
        border: none;
        background-color: #fafafa;
    }

    .card-title {
        font-size: 1.25rem;
        color: #5a4e4d;
    }

    .card-footer .btn-outline-primary {
        color: #5a4e4d;
        border-color: #5a4e4d;
    }
    .card-footer .btn-outline-primary:hover {
        background-color: #5a4e4d;
        color: white;
    }
</style>
