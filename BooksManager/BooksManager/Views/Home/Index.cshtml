@model IEnumerable<BooksManager.Models.Book>

@{
    ViewData["Title"] = "Bem-vindo à Biblioteca Online";
}

<div class="container mt-5">
    <h1 class="display-4 text-primary text-center">Bem-vindo à Biblioteca Online</h1>
    <p class="lead text-center text-muted">Explore e descubra livros disponíveis na nossa coleção.</p>

    <div class="mt-5">
        <h2 class="text-center text-primary">Catálogo de Livros</h2>
        <div class="row">
            @foreach (var book in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a asp-action="Details" asp-controller="Books" asp-route-id="@book.Id" class="text-decoration-none text-dark">
                                    @book.Titulo
                                </a>
                            </h5>
                            <p class="card-text text-muted">@book.Autor</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
