@model BooksManager.Models.Book


@{
    ViewData["Title"] = "Adicionar Livro";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0" style="background-color: #f5f3e6;">
        <div class="card-header text-white" style="background-color: #6b4f4f;">
            <h3 class="mb-0">
                <i class="bi bi-book-half me-2"></i>@ViewData["Title"]
            </h3>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data">

                <!-- Book Title -->
                <div class="mb-4">
                    <label asp-for="Titulo" class="form-label fw-bold" style="color: #6b4f4f;">Título do Livro</label>
                    <input asp-for="Titulo" class="form-control" placeholder="Digite o título do livro" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <!-- Author -->
                <div class="mb-4">
                    <label asp-for="Autor" class="form-label fw-bold" style="color: #6b4f4f;">Autor</label>
                    <input asp-for="Autor" class="form-control" placeholder="Digite o nome do autor" />
                    <span asp-validation-for="Autor" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Publication Year -->
                <div class="mb-4">
                    <label asp-for="AnoPublicacao" class="form-label fw-bold" style="color: #6b4f4f;">Ano de Publicação</label>
                    <input asp-for="AnoPublicacao" class="form-control" placeholder="Digite o ano de publicação" />
                    <span asp-validation-for="AnoPublicacao" class="text-danger"></span>
                </div>

                <!-- Book Image -->
                <div class="mb-4">
                    <label asp-for="Imagem" class="form-label fw-bold" style="color: #6b4f4f;">Imagem do Livro (opcional)</label>
                    <input asp-for="Imagem" type="file" class="form-control" />
                    <span asp-validation-for="Imagem" class="text-danger"></span>
                </div>

                <!-- Submit and Cancel Buttons -->
                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-3">Cancelar</a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save me-1"></i>Salvar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
