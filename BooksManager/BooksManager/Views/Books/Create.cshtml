@model BooksManager.Models.Book

@{
    ViewData["Title"] = "Adicionar Livro";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4" style="background-color: #f5f3e6;">
        <!-- Cabeçalho do Card -->
        <div class="card-header text-white text-center rounded-top-4" style="background: linear-gradient(135deg, #6b4f4f, #4e342e); padding: 1.5rem;">
            <h3 class="mb-0 text-white">
                <i class="bi bi-plus-circle me-2"></i>@ViewData["Title"]
            </h3>
        </div>

        <!-- Corpo do Card -->
        <div class="card-body p-5">
            <form asp-action="Create" method="post" enctype="multipart/form-data">

                <!-- Título do Livro -->
                <div class="mb-4">
                    <label asp-for="Titulo" class="form-label fw-bold" style="color: #4e342e;">Título do Livro</label>
                    <input asp-for="Titulo" class="form-control form-control-lg shadow-sm rounded-3" placeholder="Digite o título do livro" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <!-- Autor -->
                <div class="mb-4">
                    <label asp-for="Autor" class="form-label fw-bold" style="color: #4e342e;">Autor</label>
                    <input asp-for="Autor" class="form-control form-control-lg shadow-sm rounded-3" placeholder="Digite o nome do autor" />
                    <span asp-validation-for="Autor" class="text-danger"></span>
                </div>

                <!-- Descrição -->
                <div class="mb-4">
                    <label asp-for="Description" class="form-label fw-bold" style="color: #4e342e;">Descrição</label>
                    <textarea asp-for="Description" class="form-control shadow-sm rounded-3" rows="4" placeholder="Digite a descrição do livro"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Ano de Publicação -->
                <div class="mb-4">
                    <label asp-for="AnoPublicacao" class="form-label fw-bold" style="color: #4e342e;">Ano de Publicação</label>
                    <input asp-for="AnoPublicacao" class="form-control form-control-lg shadow-sm rounded-3" placeholder="Digite o ano de publicação" />
                    <span asp-validation-for="AnoPublicacao" class="text-danger"></span>
                </div>

                <!-- Imagem do Livro -->
                <div class="mb-4">
                    <label asp-for="Imagem" class="form-label fw-bold" style="color: #4e342e;">Imagem do Livro (opcional)</label>
                    <input asp-for="Imagem" type="file" class="form-control form-control-lg shadow-sm rounded-3" />
                    <span asp-validation-for="Imagem" class="text-danger"></span>
                </div>

                <!-- Botões de Submissão e Cancelamento -->
                <div class="d-flex justify-content-end mt-5">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 me-3 shadow-sm">
                        <i class="bi bi-x-circle me-1"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary rounded-pill px-4 shadow-sm" style="background-color: #8d6e63; border: none;">
                        <i class="bi bi-save me-1"></i> Salvar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Estilos Personalizados -->
<style>

    .card {
        max-width: 51rem;
        margin: 6rem auto;
    }
    /* Estilo do cabeçalho do card */
    .card-header {
        color: white;
        font-size: 1.75rem;
        font-weight: bold;
        padding: 1rem;
    }

    /* Sombra leve e bordas arredondadas para campos de formulário */
    .form-control-lg {
        padding: 1rem;
        font-size: 1rem;
    }

    /* Estilo para os botões de Cancelar e Salvar */
    .btn-outline-secondary {
        border-color: #8d6e63;
        color: #8d6e63;
    }

        .btn-outline-secondary:hover {
            background-color: #8d6e63;
            color: #ffffff;
        }

    .btn-primary {
        background-color: #8d6e63;
        border: none;
    }

        .btn-primary:hover {
            background-color: #6d4c41;
            color: #ffffff;
        }
</style>
