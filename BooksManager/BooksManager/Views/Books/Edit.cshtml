@model BooksManager.Models.Book

@{
    ViewData["Title"] = "Editar Livro";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4" style="background-color: #f5f3e6;">
        <!-- Cabeçalho do Card -->
        <div class="card-header text-white rounded-top-4" style="background: linear-gradient(135deg, #6b4f4f, #4e342e)">
            <h3 class="mb-0 text-white">
                <i class="bi bi-pencil-square me-2"></i>@ViewData["Title"]
            </h3>
        </div>

        <!-- Corpo do Card -->
        <div class="card-body p-5">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">

                <div class="d-flex gap-3">
                <!-- Título do Livro -->
                    <div class="mb-4 w-50">
                        <label asp-for="Titulo" class="form-label fw-bold" style="color: #4e342e;">Título do Livro</label>
                        <input asp-for="Titulo" class="form-control form-control-lg shadow-sm rounded-3" placeholder="Digite o título do livro" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>

                    <!-- Autor -->
                    <div class="mb-4 w-50">
                        <label asp-for="Autor" class="form-label fw-bold" style="color: #4e342e;">Autor</label>
                        <input asp-for="Autor" class="form-control form-control-lg shadow-sm rounded-3" placeholder="Digite o nome do autor" />
                        <span asp-validation-for="Autor" class="text-danger"></span>
                    </div>
                </div>

                <!-- Descrição -->
                <div class="mb-4">
                    <label asp-for="Description" class="form-label fw-bold" style="color: #4e342e;">Descrição</label>
                    <textarea asp-for="Description" class="form-control shadow-sm rounded-3" rows="2" placeholder="Digite a descrição do livro"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Ano de Publicação -->
                <div class="mb-4">
                    <label asp-for="AnoPublicacao" class="form-label fw-bold" style="color: #4e342e;">Ano de Publicação</label>
                    <input asp-for="AnoPublicacao" class="form-control form-control-lg shadow-sm rounded-3" placeholder="Digite o ano de publicação" />
                    <span asp-validation-for="AnoPublicacao" class="text-danger"></span>
                </div>

                <div class="d-flex">
                <!-- Pré-visualização da Imagem Atual -->
                <div class="mb-4"  style="width:40%">
                    <label class="form-label fw-bold" style="color: #4e342e;">Imagem Atual</label>
                    <div>
                        @if (!string.IsNullOrEmpty(Model.ImagemPath))
                        {
                            <img src="~/Images/@Model.ImagemPath" alt="Imagem de @Model.Titulo" class="img-thumbnail rounded-4 shadow-sm" onclick="showImageModal('/Images/@Model.ImagemPath')" />
                        }
                        else
                        {
                            <p class="text-muted">Sem imagem disponível</p>
                        }
                    </div>
                </div>

                <!-- Atualizar Imagem -->
                    <div class="mb-4 w-100">
                    <label asp-for="Imagem" class="form-label fw-bold" style="color: #4e342e;">Atualizar Imagem</label>
                    <input asp-for="Imagem" type="file" class="form-control form-control-lg shadow-sm rounded-3" />
                </div>
                </div>

                <!-- Botões de Submissão e Voltar -->
                <div class="d-flex justify-content-between mt-5">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
                        <i class="bi bi-arrow-left me-1"></i> Voltar para a lista
                    </a>
                    <button type="submit" class="btn btn-primary rounded-pill px-4 shadow-sm" style="background-color: #8d6e63; border: none;">
                        <i class="bi bi-save me-1"></i> Salvar Alterações
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Estilos Personalizados -->
<style>
    /* Estilizando os elementos principais */

    .card {
        max-width: 51rem;
        margin: 6rem auto;
    }

    .card-header {
        color: white;
        font-size: 1.75rem;
        font-weight: bold;
        padding: 1rem;
        text-align: center;
    }

    /* Sombra leve para os campos de entrada */
    .form-control-lg, #Description {
        padding: .5rem 1rem;
        font-size: 1em;
        background: transparent;
        border: 2px solid #e6e6e6;
    }

    /* Botão de Voltar e Salvar */
    .btn-outline-secondary {
        border-color: #8d6e63;
        color: #8d6e63;
    }

        .btn-outline-secondary:hover {
            background-color: #8d6e63;
            color: white;
        }

    .btn-primary {
        background-color: #8d6e63;
        border: none;
    }

        .btn-primary:hover {
            background-color: #6d4c41;
            color: #fff;
        }
</style>
