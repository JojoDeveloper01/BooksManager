@model IEnumerable<BooksManager.Models.Book>

@{
    ViewData["Title"] = "Catálogo de Livros";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4" style="color: #6b4f4f;">
        <i class="bi bi-journal-bookmark me-2"></i>@ViewData["Title"]
    </h1>

    <!-- Add Book Button -->
    <div class="text-end mb-4">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Adicionar Livro
        </a>
    </div>

    <!-- Check if there are books -->
    @if (!Model.Any())
    {
        <p class="text-center text-muted">Nenhum livro disponível.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark text-white" style="background-color: #6b4f4f;">
                    <tr>
                        <th scope="col">Imagem</th>
                        <th scope="col">Título</th>
                        <th scope="col">Autor</th>
                        <th scope="col">Ano</th>
                        <th scope="col" class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody style="background-color: #f5f3e6;">
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td style="width: 120px;">
                                @if (!string.IsNullOrEmpty(book.ImagemPath))
                                {
                                    <img src="~/Images/@book.ImagemPath" alt="Imagem de @book.Titulo" class="img-thumbnail" style="width: 100px; cursor: pointer;" onclick="showImageModal('/Images/@book.ImagemPath')" />
                                }
                                else
                                {
                                    <span class="text-muted">Sem imagem</span>
                                }
                            </td>
                            <td class="fw-bold" style="color: #6b4f4f;">@book.Titulo</td>
                            <td>@book.Autor</td>
                            <td>@book.AnoPublicacao</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-primary btn-sm me-2">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Excluir
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
