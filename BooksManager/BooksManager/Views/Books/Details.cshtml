@model BooksManager.Models.Book

<div class="container m-auto">
    <div class="card shadow-lg border-0" style="background-color: #f5f3e6;">
        <div class="card-header text-white" style="background-color: #6b4f4f;">
            <h3 class="mb-0 text-white">
                <i class="bi bi-book me-2"></i>@Model.Titulo
            </h3>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Imagem do Livro -->
                <div class="col-md-4 text-center mb-4">
                    @if (!string.IsNullOrEmpty(Model.ImagemPath))
                    {
                        <img src="~/Images/@Model.ImagemPath" alt="Imagem de @Model.Titulo" class="img-fluid rounded shadow-sm" style="max-height: 300px;">
                    }
                    else
                    {
                        <p class="text-muted">Sem imagem disponível</p>
                    }
                </div>

                <!-- Detalhes do Livro -->
                <div class="col-md-8">
                    <h4 class="text-muted mb-3">Autor: <span style="color: #5a4e4d;">@Model.Autor</span></h4>
                    <p><strong>Ano de Publicação:</strong> @Model.AnoPublicacao</p>
                    <p><strong>Descrição:</strong> <span class="text-muted">@Model.Description ?? "Nenhuma descrição disponível."</span></p>
                </div>
            </div>

            <!-- Botão de Navegação -->
            <div class="mt-4 text-center">
                <a href="/" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar ao Catálogo
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Estilos personalizados -->
<style>
    .card {
        background-color: #fafafa;
    }

    .card-header {
        color: white;
        font-size: 1.5rem;
        font-weight: bold;
        text-align: center;
    }

    .btn-outline-secondary {
        color: #5a4e4d;
        border-color: #5a4e4d;
    }
    .btn-outline-secondary:hover {
        background-color: #5a4e4d;
        color: white;
    }
</style>
