@model BooksManager.Models.Book

<div class="container d-flex align-items-center justify-content-center vh-100">
    <div class="card shadow-lg border-0">
        <!-- Cabeçalho do Card -->
        <div class="card-header text-center text-white">
            <h3 class="mb-0 text-white">
                <i class="bi bi-book me-2"></i>@Model.Titulo
            </h3>
        </div>

        <!-- Corpo do Card -->
        <div class="card-body p-4">
            <div class="row">
                <!-- Imagem do Livro -->
                <div class="col-md-5 d-flex align-items-center justify-content-center mb-4">
                    @if (!string.IsNullOrEmpty(Model.ImagemPath))
                    {
                        <img src="~/Images/@Model.ImagemPath" alt="Imagem de @Model.Titulo" class="img-fluid rounded shadow-sm w-100 view-transition-name" data-view-id="book-@Model.Id" style="max-height: 350px; object-fit: cover;">
                    }
                    else
                    {
                        <p class="text-muted">Sem imagem disponível</p>
                    }
                </div>

                <!-- Detalhes do Livro -->
                <div class="col-md-7">
                    <h4 class="mb-3"><strong>Autor:</strong> @Model.Autor</h4>
                    <p><strong>Ano de Publicação:</strong> <span class="text-muted">@Model.AnoPublicacao</span></p>
                    <p><strong>Descrição:</strong> <span class="text-muted">@Model.Description</span></p>
                </div>
            </div>

            <!-- Botão de Navegação -->
            <div class="mt-4">
                <a href="/" class="btn btn-outline-secondary px-4 py-2 rounded-pill">
                    <i class="bi bi-arrow-left me-1"></i> Voltar ao Catálogo
                </a>
            </div>
        </div>
    </div>
</div>


<!-- Estilos personalizados -->
<style>
    /* Fundo do cartão */
    .card {
        background-color: #f5f5f0;
        border-radius: 1rem;
        overflow: hidden;
        width: 60rem;
        background-color: #f9f7f1;
    }

    /* Cabeçalho do cartão */
    .card-header {
        background-color: #4e342e;
        color: white;
        font-size: 1.75rem;
        font-weight: bold;
        padding: 1rem;
        border-bottom: none;
    }

    /* Botão de navegação estilizado */
    .btn-outline-secondary {
        color: #4e342e;
        border-color: #4e342e;
    }

        .btn-outline-secondary:hover {
            background-color: #4e342e;
            color: #ffffff;
        }
</style>
