@model BooksManager.Models.Book

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3>@Model.Titulo</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Book Image -->
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.ImagemPath))
                    {
                        <img src="~/Images/@Model.ImagemPath" alt="Imagem de @Model.Titulo" class="img-fluid rounded" style="max-height: 300px;">
                    }
                    else
                    {
                        <p class="text-muted">Sem imagem disponível</p>
                    }
                </div>

                <!-- Book Details -->
                <div class="col-md-8">
                    <h4 class="text-muted">Autor: @Model.Autor</h4>
                    <p><strong>Ano de Publicação:</strong> @Model.AnoPublicacao</p>
                  @*   <p class="mt-4">@Model.Descricao</p> *@
                </div>
            </div>

            <div class="mt-4">
                <a href="@Url.Action("Index", "Books")" class="btn btn-secondary">Voltar ao Catálogo</a>
            </div>
        </div>
    </div>
</div>
